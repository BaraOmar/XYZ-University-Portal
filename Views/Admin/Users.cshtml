@model IEnumerable<XYZUniversityPortal.Models.ViewModels.UserRoleViewModel>
@if (TempData["Error"] != null)
{
    <div class="alert alert-warning">
        @TempData["Error"]
    </div>
}

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>User Name</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Email</td>
                <td>@item.User.UserName</td>
                <td>
                    @if (item.Roles.Any())
                    {
                        <strong>@string.Join(", ", item.Roles)</strong>
                    }
                    else
                    {
                        <span class="text-warning">No role assigned</span>
                    }

                    <form asp-action="AssignRole" method="post" class="mt-2">
                        <input type="hidden" name="userId" value="@item.User.Id" />

                        <select name="role" class="form-control form-control-sm">
                            <option value="">-- Select Role --</option>

                            @foreach (var role in item.AllRoles)
                            {
                                if (role == item.SelectedRole)
                                {
                                    <option value="@role" selected>@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }
                            }
                        </select>


                        <button type="submit" class="btn btn-sm btn-primary mt-1">
                            Assign Role
                        </button>
                    </form>
                    @if (item.Roles.Contains("Instructor"))
                    {
                        <a asp-action="AssignInstructor"
                           asp-route-userId="@item.User.Id"
                           class="btn btn-sm btn-secondary mt-2">
                            Assign Department
                        </a>
                    }
                    @if (item.Roles.Contains("Instructor") && item.HasDepartment)
                    {
                        <a asp-action="AssignCourses"
                           asp-route-instructorId="@item.User.Id"
                           class="btn btn-sm btn-warning mt-1">
                            Assign Courses
                        </a>
                    }


                </td>
 


            </tr>
        }
    </tbody>
</table>
